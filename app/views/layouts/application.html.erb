			<div class="banner">
				<div class="col-xs-1">
				<% if cookies.has_key?(:remember_token) and User.find_by_remember_token(cookies[:remember_token]) %>
					<h4>logged in as</h4> 
					<p class="lead"><%= User.find_by_remember_token(cookies[:remember_token]).name %></p> 
					<%= button_to 'Sign out', {:controller=> "sessions", :action=> "destroy"}, :method=> :delete, class: "btn btn-default" %>
				<% else %>
					<%= form_for :session, url: sessions_path, class: "form-inline" do |u| %>
						<%= u.label :email, class: "sr-only" %>
						<%= u.text_field :user_email, class: "form-control", placeholder: "Enter email" %>

						<%= u.label :password, class: "sr-only" %>
						<%= u.password_field :password, class: "form-control", placeholder: "Enter password" %>
						<%= u.submit  value: 'login', class: "btn btn-default" %>
					<% end %>
					Not Registered? <%= link_to 'CREATE ACCOUNT', new_user_url %>
				<% end %>
