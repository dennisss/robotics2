<div class="container">
	<table class="post_summary">
	 
	  <% @posts.each do |post| %>
		<tr>
		  <td class="post_title"><%= post.date %>:  <%= link_to post.title, post_url(post) %></td>
			</tr>
		<tr>
		  <td class="summary_text"><%= truncate(post.text, :length => 1000, :separator => ' ').gsub(/\n/, '<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;').html_safe %></td>
			</tr>
	  <% end %>

	</table>
</div>
